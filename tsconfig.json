{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@GQLContext": ["./GQLContext"],
      "@utils/*": ["./utils/*"],
      "@jwtUtils": ["./utils/jwtUtils"],
      "@models": ["./models/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.{ts,tsx}", "scripts/**/*"]
}
